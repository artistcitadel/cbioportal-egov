<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>

<!-- 1H 변경 -->
<div class="modal fade bs-example-modal-sm" id="popColumnAlignModal" tabindex="-1" role="dialog" aria-labelledby="popColumnAlignModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="popColumnAlignLabel">Data Grid 열너비 설정</h4>
			</div>
			<div class="modal-body skin-black">
				<div class="row">
					<div class="col-lg-12">
		                <div class="box">
							<div class="box-body">
								<div class="item text-align-center">
									<input type="number" name="colSize" id="colSize" min="10" style="width:80%;line-height:40px;font-size:20px;padding-left:10px;" placeholder="Data Grid 열너비 입력">&nbsp;&nbsp;PX
								</div>
							</div>
						</div>
	                </div>
                </div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-success" id="btnColumnAlign">적용</button>
				<button type="button" class="btn btn-default" data-dismiss="modal">닫기</button>
			</div>
		</div>
	</div>
</div>

<!-- 페이지용 js -->
<script src="<c:url value="/js/page/modals/modalColumnAlign.js" />"></script>