<!--
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	&lt;!&ndash; Appenders &ndash;&gt;
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	
	
	<appender name="file_logger" class="org.apache.log4j.DailyRollingFileAppender">
	   <param name="append" value="true" />
	   <param name="file" value="/usr/bigcenmed_logs/application.log" />
	   <param name="DatePattern" value=".yyyy-MM-dd"/> 
	   <layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern"	value="%d{yyyy-MM-dd HH:mm:ss} [%X{ClientIP}] %-5p %c{1}:%L - %m%n" />
	   </layout>
	</appender>

	
	&lt;!&ndash; Application Loggers &ndash;&gt;
	<logger name="com.softcen.bigcenmed2">
		<level value="info" />
	</logger>
	
	<logger name="com.softcen.bigcen">
		<level value="debug" />
	</logger>
	
	&lt;!&ndash; 3rdparty Loggers &ndash;&gt;
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="info" />
	</logger>

	<logger name="org.springframework.web">
		<level value="info" />
	</logger>
	
	&lt;!&ndash; Query Loggers &ndash;&gt;
    &lt;!&ndash; <logger name="jdbc.sqlonly" additivity="false">
        <level value="info"/>  
        <appender-ref ref="console" />
        <appender-ref ref="file_logger" />
    </logger> &ndash;&gt;
    
    <logger name="jdbc.sqltiming" additivity="false">
		<level value="info" />
		<appender-ref ref="console" />
		<appender-ref ref="file_logger"/>
	</logger>

    &lt;!&ndash; <logger name="jdbc.resultsettable" additivity="false">
        <level value="info"/>  
        <appender-ref ref="file" />
    </logger>   &ndash;&gt;


	&lt;!&ndash; Root Logger &ndash;&gt;
	<root>
		<priority value="warn" />
		<appender-ref ref="file_logger" />
	</root>
	
</log4j:configuration>
-->
